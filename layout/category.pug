extends partial/layout

block site_title
    != page.category + " · " + config.title

block description
    - var desc = '分类：' + page.category + ' - ' + config.title;
    meta(name="description", content=desc)

block content
  .autopagerize_page_element: .content
    .archive.animated.fadeInDown
      .list-with-title 
        h3 分类：#{page.category}       #[span 共 #{page.posts.length} 篇文章等待发掘...]
      ul.list-with-title
        include mixins
        +postList()
        +make_pager(__('prev'), __('next'))
